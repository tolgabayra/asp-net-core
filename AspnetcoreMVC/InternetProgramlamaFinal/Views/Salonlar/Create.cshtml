@model InternetProgramlamaFinal.Models.Salonlar

@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_MyLayout.cshtml";
}

<h1>Salon Ekle</h1>

<h4>Salonlar</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="SalonAdi" class="control-label"></label>
                <input asp-for="SalonAdi" class="form-control" />
                <span asp-validation-for="SalonAdi" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="SalonKonumu" class="control-label"></label>
                <input asp-for="SalonKonumu" class="form-control" />
                <span asp-validation-for="SalonKonumu" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Oluştur" class="btn btn-primary" />
            </div>
        </form>

    </div>
</div>

<div>
    <a asp-action="Index">Listeye Geri Dön</a>
</div>

<div class="m-2 p-2">
    <h6>Oluşturulan Kurs</h6>
    <h4 style="color:red">
        Salon Adı: @ViewBag.SalonAdi<br/>
        Salon Konumu: @ViewBag.SalonKonumu<br/>


    </h4>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
